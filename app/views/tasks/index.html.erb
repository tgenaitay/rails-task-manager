<h1>Todo list</h1>
<ul class="list-group">
<% @tasks.each do |task| %>
<li class="list-group-item"><input type="checkbox" class="action" name="<%= task.id %>" <% if task.done == TRUE %>checked<% end %>> <strong><%= task.name %></strong> | <%= task.description %> <%= link_to "Show", task_path(task), class: 'btn btn-primary' %> <%= link_to "Edit", edit_task_path(task), class: 'btn btn-info' %> <%= link_to("Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' ) %></li>
<% end %>
</ul>

<%= link_to("Create new task", new_task_path, class: 'btn btn-default btn-lg' ) %></li>


